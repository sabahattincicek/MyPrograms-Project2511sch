<?xml version="1.0" encoding="utf-8"?>
<com.saboon.project_2511sch.util.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sl_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

<!--    BACKGROUND-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:visibility="visible"
        app:cardCornerRadius="1000dp">

<!--        ABSENCE-->
        <LinearLayout
            android:id="@+id/ll_absence_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurfaceVariant"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_absence_decrease"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:textSize="18sp"
                android:text="-"/>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_absence_label"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Absence"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_absence_count"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_absence_increase"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:textSize="18sp"
                android:text="+"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- FOREGROUND-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:cardCornerRadius="1000dp">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_date_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="15:30"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_date_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="16:30"
                    android:textAlignment="center" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="1000dp">

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_content_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Lesson, Title"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_content_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="carsamba"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_content_1_sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Titleasdg alkjsfdhlak jfhd lakjsd fhljh" />

                    <TextView
                        android:id="@+id/tv_content_2_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="207" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</com.saboon.project_2511sch.util.SwipeRevealLayout>

