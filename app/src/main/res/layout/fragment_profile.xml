<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.profile.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/profile"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <!--PROFILE PICTURE-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="72dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_character_vibe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/modelColor1" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    app:cardCornerRadius="100dp"
                    android:elevation="20dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/iv_profile_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/profile_picture"
                        tools:src="@tools:sample/avatars" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:text="Refik"
                    android:maxLines="1"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView"
                    app:layout_constraintTop_toBottomOf="@+id/materialCardView2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:maxLines="3"
                    android:text="Lanet olsun cok iyiyim ya."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="right">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp">
                    <ImageView
                        android:id="@+id/iv_edit_user"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:visibility="visible"
                        android:src="@drawable/baseline_edit_24"
                        app:tint="?attr/colorOnSurface" />
                    <ImageView
                        android:id="@+id/iv_save_user"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:visibility="gone"
                        android:src="@drawable/baseline_check_24"
                        app:tint="?attr/colorOnSurface" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">
                    <!-- FULL NAME -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:hint="Full Name:"/>
                    <!-- ROLE -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:hint="Role:"/>
                    <!-- ACADEMIC LEVEL -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:hint="Academic Level:"/>
                    <!-- ORGANISATION -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:hint="Organisation:"/>
                    <!-- ABOUT ME -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:hint="About Me:"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_text_view_container"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical">
                    <!-- FULL NAME -->
                    <TextView
                        android:id="@+id/tv_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:hint="Full Name"/>
                    <!-- ROLE -->
                    <TextView
                        android:id="@+id/tv_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:hint="Role"/>
                    <!-- ACADEMIC LEVEL -->
                    <TextView
                        android:id="@+id/tv_academic_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:hint="Academic Level"/>
                    <!-- ORGANISATION -->
                    <TextView
                        android:id="@+id/tv_organisation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:hint="Organisation"/>
                    <!-- ABOUT ME -->
                    <TextView
                        android:id="@+id/tv_about_me"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:maxLines="4"
                        android:hint="About Me"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_edit_text_container"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <!-- FULL NAME -->
                    <EditText
                        android:id="@+id/et_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:background="?attr/colorSurfaceVariant"
                        android:maxLines="1"
                        android:text="sabo"
                        android:hint="Full Name"/>
                    <!-- ROLE -->
                    <EditText
                        android:id="@+id/et_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:background="?attr/colorSurfaceVariant"
                        android:maxLines="1"
                        android:hint="Role"/>
                    <!-- ACADEMIC LEVEL -->
                    <EditText
                        android:id="@+id/et_academic_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:background="?attr/colorSurfaceVariant"
                        android:maxLines="1"
                        android:hint="Academic Level"/>
                    <!-- ORGANISATION -->
                    <EditText
                        android:id="@+id/et_organisation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:background="?attr/colorSurfaceVariant"
                        android:maxLines="1"
                        android:hint="Organisation"/>
                    <!-- ABOUT ME -->
                    <EditText
                        android:id="@+id/et_about_me"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:background="?attr/colorSurfaceVariant"
                        android:maxLines="4"
                        android:hint="About Me"/>
                </LinearLayout>

            </LinearLayout>



            <!-- A divider to separate header from options -->
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <!-- Options List -->
            <LinearLayout
                android:id="@+id/layout_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider">

                <!-- Synchronization Option -->
<!--                <TextView-->
<!--                    android:id="@+id/tv_synchronization"-->
<!--                    style="?attr/textAppearanceSubtitle1"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="?attr/selectableItemBackground"-->
<!--                    android:clickable="true"-->
<!--                    android:drawablePadding="16dp"-->
<!--                    android:focusable="true"-->
<!--                    android:enabled="false"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:paddingTop="16dp"-->
<!--                    android:paddingBottom="16dp"-->
<!--                    android:text="@string/synchronization"-->
<!--                    app:drawableStartCompat="@drawable/baseline_sync_24"-->
<!--                    app:drawableTint="?attr/colorOnSurface" />-->

<!--                <com.google.android.material.divider.MaterialDivider-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="8dp"-->
<!--                    android:layout_marginBottom="8dp" />-->

                <!-- Settings Option -->
                <TextView
                    android:id="@+id/tv_settings"
                    style="?attr/textAppearanceSubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/settings"
                    app:drawableStartCompat="@drawable/baseline_settings_24"
                    app:drawableTint="?attr/colorOnSurface" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Export Option -->
                <TextView
                    android:id="@+id/tv_export_data"
                    style="?attr/textAppearanceSubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/export_data"
                    app:drawableStartCompat="@drawable/baseline_file_upload_24"
                    app:drawableTint="?attr/colorOnSurface" />

                <!-- Import Option -->
                <TextView
                    android:id="@+id/tv_import_data"
                    style="?attr/textAppearanceSubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/import_data"
                    app:drawableStartCompat="@drawable/baseline_file_download_24"
                    app:drawableTint="?attr/colorOnSurface" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Contact Support -->
                <TextView
                    android:id="@+id/tv_contact_support"
                    style="?attr/textAppearanceSubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/contact_support"
                    app:drawableStartCompat="@drawable/baseline_help_outline_24"
                    app:drawableTint="?attr/colorOnSurface" />

                <!-- Privacy Policy -->
                <TextView
                    android:id="@+id/tv_privacy_policy"
                    style="?attr/textAppearanceSubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/privacy_policy"
                    app:drawableStartCompat="@drawable/baseline_privacy_tip_24"
                    app:drawableTint="?attr/colorOnSurface" />

                <!-- Terms and Conditions -->
                <TextView
                    android:id="@+id/tv_terms"
                    style="?attr/textAppearanceSubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/terms_amp_conditions"
                    app:drawableStartCompat="@drawable/baseline_gavel_24"
                    app:drawableTint="?attr/colorOnSurface" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Delete All Data -->
                <TextView
                    android:id="@+id/tv_delete_all"
                    style="?attr/textAppearanceSubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/delete_all_data"
                    android:textColor="?attr/colorError"
                    app:drawableStartCompat="@drawable/baseline_delete_forever_24"
                    app:drawableTint="?attr/colorError" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="50dp">

                <!-- App Version -->
                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    tools:text="@string/app_version" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>