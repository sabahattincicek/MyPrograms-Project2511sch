<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.course.CourseDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:menu="@menu/toolbar_menu_action_edit_delete"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:navigationIconTint="?attr/colorOnSurface"
            app:subtitle="@string/course"
            app:title="@string/appBarTitle_courseDetails" />
    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:elevation="20dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/ll_course_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorCustomColor1Container"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_title_course"
                    android:textColor="?attr/colorOnCustomColor1Container"
                    android:maxLines="1"
                    android:layout_margin="8dp"
                    android:text="Robot Kinematigi"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_person_primary"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:text="Zafer Bingul"
                    android:textColor="?attr/colorOnCustomColor1Container"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_person_secondary"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Cenk karaman, Emre ulusan"
                    android:textColor="?attr/colorOnCustomColor1Container"
                    android:maxLines="1"
                    android:visibility="visible"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="description jflakjdfl kasfjdlaskf j;als kdfj sadf dsfafd"
                        android:textColor="?attr/colorOnCustomColor1Container"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_absence_label"
                            android:layout_width="80dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnCustomColor1Container"
                            android:text="Absence"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btn_absence_decrease"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_horizontal_rule_24"
                                android:tint="?attr/colorOnCustomColor1Container"/>
                            <TextView
                                android:id="@+id/tv_absence_count"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnCustomColor1Container"
                                android:layout_height="wrap_content"
                                android:text="2"/>
                            <ImageView
                                android:id="@+id/btn_absence_increase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_add_24"
                                app:tint="?attr/colorOnCustomColor1Container" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="16dp"
            android:background="?attr/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/schedules"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/btn_add_schedule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_add_24"
                app:tint="?attr/colorOnSurface" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_schedules"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</LinearLayout>