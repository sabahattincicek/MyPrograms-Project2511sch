<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/programTableFragment"
        android:name="com.saboon.project_2511sch.presentation.programtable.ProgramTableListFragment"
        android:label="fragment_program_table"
        tools:layout="@layout/fragment_program_table_list" >
        <action
            android:id="@+id/action_programTableFragment_to_programTableDetailsFragment"
            app:destination="@id/programTableDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.saboon.project_2511sch.presentation.main.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/courseDetailsFragment"
        android:name="com.saboon.project_2511sch.presentation.course.CourseDetailsFragment"
        android:label="fragment_course_details"
        tools:layout="@layout/fragment_course_details" >
        <argument
            android:name="programTable"
            app:argType="com.saboon.project_2511sch.domain.model.ProgramTable" />
        <action
            android:id="@+id/action_courseDetailsFragment_to_fileFragment"
            app:destination="@id/fileFragment" />
        <argument
            android:name="course"
            app:argType="com.saboon.project_2511sch.domain.model.Course" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.saboon.project_2511sch.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_courseDetailsFragment"
            app:destination="@id/courseDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/fileFragment"
        android:name="com.saboon.project_2511sch.presentation.sfile.FileFragment"
        android:label="fragment_file"
        tools:layout="@layout/fragment_file" >
        <action
            android:id="@+id/action_fileFragment_to_courseDetailsFragment"
            app:destination="@id/courseDetailsFragment" />
        <argument
            android:name="program_table"
            app:argType="com.saboon.project_2511sch.domain.model.ProgramTable"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="course"
            app:argType="com.saboon.project_2511sch.domain.model.Course"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="task"
            app:argType="com.saboon.project_2511sch.domain.model.Task"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/programTableDetailsFragment"
        android:name="com.saboon.project_2511sch.presentation.programtable.ProgramTableDetailsFragment"
        android:label="fragment_program_table_details"
        tools:layout="@layout/fragment_program_table_details" >
        <action
            android:id="@+id/action_programTableDetailsFragment_to_courseDetailsFragment"
            app:destination="@id/courseDetailsFragment" />
        <argument
            android:name="programTable"
            app:argType="com.saboon.project_2511sch.domain.model.ProgramTable" />
        <action
            android:id="@+id/action_programTableDetailsFragment_to_fileFragment"
            app:destination="@id/fileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.saboon.project_2511sch.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>